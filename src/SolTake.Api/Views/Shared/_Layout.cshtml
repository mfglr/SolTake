@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SolTake</title>
    <link rel="icon" type="image/png" href="~/images/logo-b64.png">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        h2 {
            color: #555;
        }

        p {
            color: #666;
        }

        ul {
            list-style-type: square;
            margin-left: 20px;
        }

        ul li {
            margin: 5px 0;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
    <body>
        <div class="container">
            <header class="d-flex justify-content-center py-3">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            SolTake
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="TermsOfUse" asp-action="Index" class="nav-link">
                            Kullanım Şartları
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="PrivacyPolicy" asp-action="Index" class="nav-link">
                            Gizlilik Sözleşmesi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="AccountDeletion" asp-action="Index" class="nav-link">
                            Hesap Silme
                        </a>
                    </li>
                </ul>
            </header>
            @RenderBody()
        </div>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
